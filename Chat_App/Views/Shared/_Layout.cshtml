<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <script src="~/libs/jquery/jquery.js"></script>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.js"></script>
    <style type="text/css">
        body {
            padding-top: 80px;
            background-color: lightgrey;
        }
    </style>

    @RenderSection("style",required:false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top shadow-sm border-bottom" style="background-color:darkcyan">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                    <img src="~/logo/message-icon.jpg" width="40" />
                    Chat App
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Chat">Chat</a></li>
                    </ul>
                    <div style="position: absolute; right: 80px;">
                        <strong id="d" style="font-size: large; font-size: large; font-weight: bold; color: white">Joined as :</strong>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <p class="text-center">&copy; @System.DateTime.Now.Year - All Rights Reserved</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
